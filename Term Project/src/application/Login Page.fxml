<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="380.0" prefWidth="550.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginPage">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox style="-fx-background-color: #2196F3;">
               <children>
                  <MenuBar style="-fx-background-color: #2196F3;">
                    <menus>
                      <Menu mnemonicParsing="false" text="Welcome" />
                    </menus>
                  </MenuBar>
               </children>
            </VBox>
            <VBox>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label style="-fx-text-fill: #757575;" text="Sign In">
                           <font>
                              <Font name="System Bold Italic" size="24.0" />
                           </font>
                        </Label>
                        <VBox alignment="CENTER">
                           <children>
                              <HBox>
                                 <children>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <VBox>
                                       <children>
                                          <Label style="-fx-text-fill: #757575;" text="Username" />
                                          <TextField fx:id="userNameInput" />
                                       </children>
                                    </VBox>
                                    <Region layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                    <VBox>
                                       <children>
                                          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                             <children>
                                                <Label style="-fx-text-fill: #757575;" text="Password" />
                                                <Region prefHeight="35.0" prefWidth="41.0" HBox.hgrow="ALWAYS" />
                                                <Hyperlink onAction="#forgotPasswordPushed" prefHeight="22.0" prefWidth="65.0" text="Forgot" />
                                             </children>
                                          </HBox>
                                          <TextField fx:id="passwordInput" promptText="Password" />
                                       </children>
                                    </VBox>
                                    <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <Button mnemonicParsing="false" onAction="#loginButtonPushed" text="Submit" />
                        <Hyperlink onAction="#createAccountPushed" style="-fx-text-fill: #757575;" text="Sign Up" />
                     </children>
                     <padding>
                        <Insets top="50.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
